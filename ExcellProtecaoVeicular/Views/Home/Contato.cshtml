@model ExcellProtecaoVeicular.Model.Entity._Email

<div class="container">
    <section class="main-section contact" id="contact">

        <div class="row">
            <div class="col-lg-6 col-sm-7 wow fadeInLeft">
                <div class="contact-info-box address clearfix">
                    <h3><i class=" icon-map-marker"></i>Endereço:</h3>
                    <span>Av.da Paz, S/N, Qd. 147, Lt 31, 1º andar Sala 01.<br>Setor Garavelo, Aparecida de Goiania.</span>
                </div>
                <div class="contact-info-box phone clearfix">
                    <h3><i class="fa-phone" style="margin-left: -7px;"></i>Telefone:</h3>
                    <span>(62) 3578 - 2595</span>
                </div>
                <div class="contact-info-box phone clearfix">
                    <h3><i class="fa fa-whatsapp" style="margin-left: -13px;"></i>WhatsApp:</h3>
                    <!-- <span>(62) 98113 - 3134 (Tim)</span> -->
                    <span>(62) 99198 - 1684 (Claro)</span>
                    <span style="margin-left: 115px;">(62)98595 - 0990 (Oi)</span>
                    <span style="margin-left: 115px;">(62)99322 - 8338 (Claro)</span>
                    <span style="margin-left: 115px;">(62)99271 - 4702 (Claro)</span>

                </div>
                <div class="contact-info-box email clearfix">
                    <h3><i class="fa-pencil"></i>e - mail:</h3>
                    <span>contato@excellprotecaoveicular.com.br</span>
                </div>
                <div class="contact-info-box hours clearfix">
                    <h3><i class="fa-clock-o"></i>Horarios:</h3>
                    <span><strong>Segunda - Sexta:</strong> 08:00 - 18:00<br><strong>Sábado:</strong> 08:00 - 12:00</span>
                </div>
                <ul class="social-link">
                    <li class="twitter"><a href="#"><i class="fa-twitter"></i></a></li>
                    <li class="facebook"><a href="#"><i class="fa-facebook"></i></a></li>
                    <li class="pinterest"><a href="#"><i class="fa-pinterest"></i></a></li>
                    <li class="gplus"><a href="#"><i class="fa-google-plus"></i></a></li>
                    <li class="dribbble"><a href="#"><i class="fa-dribbble"></i></a></li>
                </ul>
            </div>
            <div class="col-lg-6 col-sm-5 fadeInUp delay-05s">
                <div class="form">
                @using (Html.BeginForm("Contato", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
                {     
                    @Html.ValidationSummary()
                    <div class="form-group">
                        @Html.LabelFor(m => m.Nome, new { @for = "usr", @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Nome,  new { @class = "form-control", @id = "inputEmail3", @placeholder = "Seu Nome ..." } )
                    
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @for = "inputEmail3", @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "inputEmail3", @placeholder = "email@email.com.br"} )
                            
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Telefone, new { @for = "inputEmail3", @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Telefone,new { @class = "form-control input-medium bfh-phone", @placeholder = "(dd) xxxx-xxxx", @id="telefoneMask"} )
                            
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Mensagem, new { @for = "inputEmail3", @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextAreaFor(m => m.Mensagem,new { @class = "form-control", @id = "inputEmail3", @placeholder = "Deixe a sua Mensagem.." } )
                            
                        </div>
                    </div>
                    <input class="input-btn" type="submit" value="Enviar mensagem">
                }
                 @if (TempData["MensagemSucesso"] != null)
                 {
                    <div class="alert alert-success" role="alert">
                        <strong>Enviado com sucesso!!</strong><br/> @TempData["MensagemSucesso"]
                    </div>
                 }
                 else if (TempData["MensagemError"] != null)
                 {
                    <div class="alert alert-danger" role="alert">
                        <strong>Desculpe !</strong><br />@TempData["MensagemError"]
                    </div>
                 }
                 else if (TempData["FalseModelState"] != null)
                 {
                    <div class="alert alert-danger" role="alert">
                        <strong>Erro !</strong> <br />@TempData["FalseModelState"]
                    </div>
                 }

                </div>
            </div>
        </div>
    </section>
</div>
